<Window x:Class="GamesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamesWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid x:Name="Main" Background="LightSeaGreen" Margin="0,0,-0.4,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>
        <Button Content="Login" Click="Button_Login_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="176" Margin="97,43,0,0" Height="36"/>
        <Button Content="NewCustomer" Click="Button_NewCustomer_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="176" Margin="97,25.6,0,0" Grid.Row="1" Height="36"/>

    </Grid>
</Window>
